@model KeyHouse.ModelView.RegisterViewModel

<div class="container-xxl py-5">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <div class="wow fadeInUp" data-wow-delay="0.5s">
                        <h1 class="text-center  text-primary">User Registration Form</h1>
                        <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="UserName" class="form-control" placeholder="User Name">
                                        <label asp-for="UserName">User Name</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control" placeholder="User Email">
                                        <label asp-for="Email">User Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="UserPhone" class="form-control" placeholder="User PhoneNumber">
                                        <label asp-for="UserPhone">User PhoneNumber</label>
                                        <span asp-validation-for="UserPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Password" class="form-control" placeholder="User Password">
                                        <label asp-for="Password">User Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm User Password">
                                        <label asp-for="ConfirmPassword">Confirm User Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}












