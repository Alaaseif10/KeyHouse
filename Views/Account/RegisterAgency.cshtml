@model KeyHouse.ModelView.RegisterAgencyViewModel

<div class="container-xxl py-5">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <div class="wow fadeInUp" data-wow-delay="0.5s">
                        <h1 class="text-center  text-primary">Agency Registration Form</h1>
                        @*  enctype="multipart/form-data" allow to upload file from image *@
                        <form asp-controller="Account" asp-action="RegisterAgency" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="UserName" class="form-control" placeholder="User Name">
                                        <label asp-for="UserName">User Name</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="AgencyName" class="form-control" placeholder="Agency Name">
                                        <label asp-for="AgencyName">Agency Name</label>
                                        <span asp-validation-for="AgencyName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="AgencyDescription" class="form-control" style="height: 100px" placeholder="About Agency"></textarea>
                                        <label asp-for="AgencyDescription">About Agency</label>
                                        <span asp-validation-for="AgencyDescription" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control" placeholder="Agency Email">
                                        <label asp-for="Email">Agency Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="UserPhone" class="form-control" placeholder="Agency PhoneNumber">
                                        <label asp-for="UserPhone">Agency PhoneNumber</label>
                                        <span asp-validation-for="UserPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="NumCompany" class="form-control" placeholder="Commercial registration number">
                                        <label asp-for="NumCompany">Commercial registration number</label>
                                        <span asp-validation-for="NumCompany" class="text-danger"></span>
                                    </div>
                                </div>
                             @* <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="logo" class="form-control" type="file" placeholder=">Upload Your Logo">
                                        <label asp-for="logo">Upload Your Logo</label>
                                        <span asp-validation-for="logo" class="text-danger"></span>
                                    </div>
                                </div> *@
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Password" class="form-control" placeholder="Agency Password">
                                        <label asp-for="Password">Agency Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Agency Password">
                                        <label asp-for="ConfirmPassword">Confirm Agency Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}










