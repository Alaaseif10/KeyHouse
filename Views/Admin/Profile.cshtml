@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model KeyHouse.Models.Entities.Admin
<section>
    <div class="container-fluid pt-4 px-4" style="background-color:white;">
       <br />
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-success">
                            @Model.UserName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
