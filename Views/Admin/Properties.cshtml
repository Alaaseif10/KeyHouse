@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model X.PagedList.IPagedList<KeyHouse.Models.Entities.Units>
@using X.PagedList.Mvc.Core;
<section>
    <!-- Property List Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-0 gx-5 align-items-end">
                <div class="col-lg-6">
                    <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                        <h1 class="mb-3">Property Listing</h1>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="property-item rounded overflow-hidden">
                                    <div class="position-relative overflow-hidden">
                                        @foreach (var img in item.Images)
                                        {
                                            <img class="img-fluid" src="~/unitImages/@img.Img_Path" alt="Image">

                                        }
                                        <br />
                                        <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3"> @(item.Type_Rent.ToString())</div>
                                        <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@((item.Type_Unit.ToString()))</div>
                                    </div>
                                    <div class="p-4 pb-0">
                                        <h5 class="text-primary mb-3">$@item.Price</h5>
                                        <a class="d-block h5 mb-2" href="">@item.Unit_Description</a>
                                        <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.Blocks?.Block_Name</p>
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@item.Area M</small>
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@item.Num_Rooms Rooms</small>
                                        <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@item.Num_Bathrooms Bath</small>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Users", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
})
</section>